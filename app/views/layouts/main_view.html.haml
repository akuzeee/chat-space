!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', http: { equiv: 'Content-Type' } }
    %title ChatSpace
    = stylesheet_link_tag    'application', media: 'all', data: { turbolinks: { track: true } }
    = javascript_include_tag 'application', data: { turbolinks: { track: true } }
    = csrf_meta_tags
  %body
    = render partial: 'common/notification'
    .contents
      .side-content
        .chat-user
          .chat-user__name
            %h5 #{current_user.name}
          .chat-user__actions
            = link_to new_chat_group_path, class: 'chat-user__new-group-action' do
              = fa_icon 'pencil-square-o'
            = link_to edit_user_registration_path, class: 'chat-user__edit-action' do
              = fa_icon 'cog'
        %ul.chat-groups
          = render @chat_groups
      = yield
