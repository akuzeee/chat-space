= render partial: 'common/notification'
.contents
  .side-content
    .chat-user
      .chat-user__name
        %h5 #{current_user.name}
      .chat-user__actions
        = link_to new_chat_group_path, class: 'chat-user__new-group-action' do
          = fa_icon 'pencil-square-o'
        = link_to edit_user_registration_path, class: 'chat-user__edit-action' do
          = fa_icon 'cog'
    %ul.chat-groups
      = render @chat_groups
  = render 'messages', chat_group: @chat_group, message: @message if @chat_group.present?
